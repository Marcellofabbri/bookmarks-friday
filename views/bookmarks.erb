<!DOCTYPE html>
<h1> "Here are your bookmarks" </h1>

#<h1> <a href='<%=@bookmarks.each { |bm| bm.url } %>'> <%=@bookmarks.each { |bm| bm.title }%> </a> </h1>


<ul>
  <% @bookmarks.each do |bookmark| %>

    <li class="bookmark" id="bookmark-<%= bookmark.id %>">
    <a href='http://<%= bookmark.url %>' target="_blank">
    <%= bookmark.title %> </a> 

    <form action="/bookmarks/<%= bookmark.id %>" method="post">
        <input type='hidden' name='_method' value='DELETE'>
        <input type="submit" value="Delete">
      </form>

    <form action="/bookmarks" method="post">
      <input type='hidden'm name='update_id' value='<%= bookmark.id %>'>
      <input type='text' name='update_title' value='<%= bookmark.title %>'>
      <input type='text' name='update_url' value='<%= bookmark.url %>'>
      <input type='hidden' name='_method' value='PATCH'>
      <input type="submit" value="Update">
    </form>

    </li>
    
  <% end %>
</ul>